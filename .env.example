# ============================================
# EoPix Hetzner Deployment - Configurações
# ============================================
# Copie este arquivo para .env e preencha os valores
# ============================================

# ============================================
# Hetzner Cloud API
# ============================================
HCLOUD_TOKEN=8UhKjaCwIOAx2JfD701aCjUYRALObGyws6DBVqgVK6ceBAOY3ZDzCRaSEdiJ21i2
SSH_KEY_NAME=eopix-key
LOCATION=ash  # ash, nbg1, fsn1, hel1, etc.

# ============================================
# Servidores
# ============================================
APP_SERVER_NAME=eopix-app
APP_SERVER_TYPE=cpx31
DB_SERVER_NAME=eopix-db
DB_SERVER_TYPE=cpx21

# ============================================
# Rede Privada
# ============================================
PRIVATE_NETWORK_NAME=eopix-network
PRIVATE_NETWORK_SUBNET=10.0.0.0/16

# ============================================
# Domínio e TLS
# ============================================
DOMAIN=api.eopix.me
EMAIL_SSL=admin@eopix.me  # Para Let's Encrypt

# ============================================
# Backend (APP Server)
# ============================================
BACKEND_IMAGE=eopix_backend-backend:latest
BACKEND_PORT_1=3001
BACKEND_PORT_2=3002
BACKEND_PORT_3=3003

# ============================================
# Banco de Dados (DB Server)
# ============================================
MYSQL_ROOT_PASSWORD=Mts.19950927
MYSQL_DATABASE=eopix
MYSQL_USER=eopix
MYSQL_PASSWORD=Mts.19950927

# ============================================
# Variáveis do Backend (serão usadas no .env do app-server)
# ============================================
# Estas variáveis serão copiadas para app-server/.env
# Preencha com os valores reais do seu backend

# Node.js
NODE_ENV=production
PORT=4000
SESSION_SECRET=change-me-minimum-32-characters-long-secret-key
COOKIE_DOMAIN=.eopix.me

# Database (será preenchido automaticamente com IP do DB server)
# DB_HOST será preenchido automaticamente
DB_PORT=3306
# DB_USER e DB_PASSWORD serão preenchidos automaticamente
DB_NAME=eopix

# Redis/Valkey (será preenchido automaticamente com IP do DB server)
# REDIS_HOST será preenchido automaticamente
REDIS_PORT=6379
VALKEY_NAMESPACE=eopix

# CORS
CORS_ENABLED=true
CORS_ORIGIN=https://eopix.me
CORS_ORIGINS=https://seudominio.com,https://www.seudominio.com
CORS_ALLOW_CREDENTIALS=true

# Cloudflare R2 (preencha com seus valores)
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY=your-r2-access-key
R2_SECRET_KEY=your-r2-secret-key
R2_BUCKET=eopix-assets
R2_REGION=auto
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your-cdn-domain.com

# Email (opcional)
MAIL_FROM=noreply@seudominio.com
SMTP_HOST=smtp.seudominio.com
SMTP_PORT=587
SMTP_USER=noreply@seudominio.com
SMTP_PASS=your-smtp-password

# App URLs
APP_URL=https://seudominio.com
API_BASE_URL=https://api.seudominio.com
FRONTEND_URL=https://seudominio.com

# Payment Providers (preencha conforme necessário)
PAYMENT_ENV=production
PAYMENT_DEFAULT_PROVIDER=efibank
# EFI Production
EFI_PROD_CLIENT_ID=your-efi-client-id
EFI_PROD_CLIENT_SECRET=your-efi-client-secret
EFI_PROD_PIX_CERT=/app/certs/efi-prod.p12
EFI_PROD_PIX_KEY=your-pix-key
EFI_PROD_WEBHOOK_SECRET=your-webhook-secret

# OAuth (opcional)
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
KICK_CLIENT_ID=your-kick-client-id
KICK_CLIENT_SECRET=your-kick-client-secret

# Outras configurações (opcional)
LOG_LEVEL=info
ENABLE_PRETTY_LOGS=false
RATE_LIMIT_MAX=500
RATE_LIMIT_WINDOW=1m
